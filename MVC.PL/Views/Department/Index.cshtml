@using MVC.BLL.ModelVM.Department
@using MVC.BLL.ModelVM.ResultResponse
@model Response<List<GetDepartmentVM>>

@if (Model.IsHaveErrorOrNot)
{
    <p>@Model.ErrorMessage</p>

}
else
{
    <p>
        <a asp-action="Create" class="btn btn-primary">Create a new Department </a>
    </p>

    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Area</th>
				<th>IsDeleted</th>
                <th>Actions</th>

            </tr>
        </thead>
        <tbody>
            @foreach (var e in Model.Result)
            {
                <tr>
                    <td>@e.Id</td>
                    <td>@e.Name</td>
                    <td>@e.Area</td>
                    <td>@(e.IsDeleted ? "Yes" : "No")</td>

                    <td>
                        <a asp-action="GetById" asp-controller="Department" asp-route-id="@e.Id" class="btn btn-sm btn-info">Details</a>
                        <a asp-action="Edit" asp-controller="Department" asp-route-id="@e.Id" class="btn btn-sm btn-warning">Edit</a>

                        <a asp-action="ToggleStatus" asp-controller="Department" asp-route-id="@e.Id"
                           class="btn btn-sm @(e.IsDeleted ? "btn-success" : "btn-danger")"
                           onclick="return confirm('Are you sure you want to toggle this employee?')">
                            @(e.IsDeleted ? "Restore" : "Delete")
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}


